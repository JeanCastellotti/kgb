@import url('https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap')

color-primary-light = #7962F2
color-primary-dark = #6B57D2
color-gray-dark = #2F2B3F
color-gray-dark-2 = #221F2E
color-gray-light = #4C4766

*
  padding 0
  margin 0
  box-sizing border-box

html
  font-size 62.5%

body
  font-size 1.6rem
  background-color: color-gray-dark-2
  font-family "Roboto", sans-serif
  color rgba(255,255,255,.8)

.container
  max-width 102.4rem
  margin 0 auto

.header
  padding 2rem 0
  margin-bottom 6rem
  background-color color-gray-dark
  .container
    display flex
    align-items center
    justify-content space-between
  &__logo
    color: rgba(255,255,255,.9)
    font-size 3.2rem
    font-weight 700
  &__nav
    display flex
    align-items center
  &__link
    color rgba(255,255,255,.6)
    text-decoration none
    &:hover
      color rgba(255,255,255,.8)

.heading-1
  font-size 3.2rem
  text-align center
  margin-bottom 4rem

.form
  max-width 56.8rem
  margin 0 auto
  &__group
    margin-bottom 3rem
  &__label
    display block
    margin-bottom 1rem
  &__input
    width 100%
    padding 1.5rem
    border-radius 5px
    font-family inherit
    font-size inherit
    border none
    background-color color-gray-dark
    color inherit
    &:focus
      outline none
  &__btn
    width 100%
    padding 1.5rem
    border-radius 5px
    border none
    color inherit
    background-color color-primary-light
    cursor pointer
    font-size 1.8rem
    &:hover
      background-color color-primary-dark

.alert-error
  max-width 56.8rem
  margin 0 auto
  padding 2rem
  border-radius 5px
  margin-bottom 3rem
  display flex
  align-items center
  justify-content space-between
  background-color #ff6961
  
.alert-icon
  height 2rem
  width auto
  cursor pointer